@model kurssitietokanta.Models.Kurssimateriaalit



@{
    ViewBag.Title = "Luo uusi";
}

@*tästä alkaa modal-ikkuna--------------------------------------------------------------------------*@
<div class="modal fade" id="ModalKurssimateriaaliCreate">
