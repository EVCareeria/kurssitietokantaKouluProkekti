                                    @Html.EditorFor(model => model.Opintomateriaalit.Kuvaus, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Opintomateriaalit.Kuvaus, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.Tekninenmateriaali_Id, "Tekninenmateriaali kuvaus", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Tekninenmateriaali_Id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Tekninenmateriaali_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="form-group">
                                @Html.LabelFor(model => model.Teknisetmateriaalit.Kuvaus, "Kuvaus", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Teknisetmateriaalit.Kuvaus, new { htmlAttributes = new { @class = "form-control" } })
