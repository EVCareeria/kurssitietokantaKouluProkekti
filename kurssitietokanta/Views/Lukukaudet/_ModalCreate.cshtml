                                    @Html.EditorFor(model => model.Vikkonpäivä, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Vikkonpäivä, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Kieli_Id, "Kieli", htmlAttributes: new { @class = "control-label col-md-2" })
