@model kurssitietokanta.Models.Tutkinnot

@{
    ViewBag.Title = "Poista";
}

@*tästä alkaa modal-ikkuna--------------------------------------------------------------------------*@
<div class="modal fade" id="ModalTutkinnotDelete">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Oletko varma, että haluat poistaa tutkinnon? @Html.HiddenFor(model => model.Tutkinto_Id)</h3>
                <button class="btn btn-warning" onclick="deleteOrder(@Model.Tutkinto_Id)"><i class="jquerydelete fas fa-trash-alt"></i></button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal text-left">
                        <dt>Tutkinnon nimi</dt>
                        <dd>@Html.DisplayFor(model => model.Tutkintonimi)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Aloitusvuosi)</dt>
                        <dd>@Html.DisplayFor(model => model.Aloitusvuosi)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Päättymisvuosi)</dt>
                        <dd>@Html.DisplayFor(model => model.Päättymisvuosi)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Kesto)</dt>
                        <dd>@Html.DisplayFor(model => model.Kesto)</dd>
                        <dt>@Html.DisplayNameFor(model => model.OSP)</dt>
                        <dd>@Html.DisplayFor(model => model.OSP)</dd>
                        @*<dt>Tutkintoalueen nimi</dt>
                        <dd>@Html.DisplayFor(model => model.Tutkintoalueet.Tutkintoaluenimi)</dd>*@
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" value="Delete" class="btn btn-sm card-buttons"><i class="fas fa-trash-alt"></i></button>
                        <a href="@Url.Action("Index", "Tutkinnot")" class="btn btn-sm card-buttons"><i class="fas fa-times"></i></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
